<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:text="Login"
        android:textSize="35sp"
        android:textColor="@color/black"
        android:fontFamily="@font/plus_jakarta_sans_bold"
        android:paddingTop="80dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        />

    <EditText
        android:id="@+id/fieldNoHp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login"
        android:textSize="13dp"
        android:fontFamily="@font/plus_jakarta_sans_medium"
        android:layout_marginTop="20dp"
        android:hint="Nomor Telepon"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/bg_field"
        android:paddingLeft="15dp"
        />

    <EditText
        android:id="@+id/fieldPwd"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fieldNoHp"
        android:textSize="13dp"
        android:fontFamily="@font/plus_jakarta_sans_medium"
        android:layout_marginTop="20dp"
        android:hint="Password"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/bg_field"
        android:paddingLeft="15dp"
        />

    <!--    <LinearLayout-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:gravity="center"-->
    <!--        android:orientation="horizontal"-->
    <!--        app:layout_constraintTop_toBottomOf="@id/fieldPwd"-->
    <!--        app:layout_constraintStart_toStartOf="parent"-->
    <!--        >-->

    <TextView
        android:id="@+id/redirectRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Belum memiliki akun?"
        android:textSize="11dp"
        android:fontFamily="@font/plus_jakarta_sans_semibold"
        android:textColor="@color/grey"
        app:layout_constraintTop_toBottomOf="@id/fieldPwd"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/regLoggin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Masuk "
        app:layout_constraintTop_toBottomOf="@id/redirectRegister"
        android:textSize="15dp"
        android:fontFamily="@font/plus_jakarta_sans_semibold"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        />


    <!--    </LinearLayout>-->

</androidx.constraintlayout.widget.ConstraintLayout>