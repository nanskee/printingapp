<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/offwhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/orange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.5"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/deliverto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lokasi anda"
        android:textSize="11dp"
        android:textColor="@color/white"
        android:fontFamily="@font/plus_jakarta_sans_regular"
        android:paddingTop="70dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />


    <TextView
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Institut Teknologi Sepuluh Nopember"
        android:textSize="13dp"
        android:textColor="@color/white"
        android:fontFamily="@font/plus_jakarta_sans_semibold"
        app:layout_constraintTop_toBottomOf="@id/deliverto"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />
        
    <androidx.cardview.widget.CardView
        android:id="@+id/searchfield"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"

        <TextView
            android:id="@+id/searchdesc"
            android:text=""
        />

    <TextView
        android:id="@+id/nearprint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tempat printing terdekat"
        android:textSize="15sp"
        android:paddingTop="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/plus_jakarta_sans_bold"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@id/searchfield"
        />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nearprint"
        android:layout_margin="10dp"
        android:columnCount="2"
        android:rowCount="5"
        >

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            tools:listitem="@layout/item_catalog"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:elevation="0dp"
            />

    </GridLayout>





</androidx.constraintlayout.widget.ConstraintLayout>