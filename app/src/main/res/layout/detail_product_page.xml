<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/product_image"
        android:layout_width="match_parent"
        android:layout_height="332dp"
        android:backgroundTint="@color/orange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/judulProduk"
        android:text="Jasa Cetak Makalah, Skripsi, Laporan Praktikum"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:fontFamily="@font/plus_jakarta_sans_bold"
        android:paddingTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/product_image"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/descProduk"
        android:text="Menyediakan layanan cetak makalah, skripsi, dan laporan praktikum dengan kualitas terbaik. Menggunakan kertas premium dan tinta tajam, hasil cetakan kami selalu jelas dan profesional.
                        Cocok untuk mahasiswa yang membutuhkan cetakan skripsi, tesis, laporan praktikum, dan makalah."
        android:textSize="13dp"
        android:textColor="@color/black"
        android:fontFamily="@font/plus_jakarta_sans_regular"
        android:paddingTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/judulProduk"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/harga"
        android:text="Rp350-450"
        android:textSize="16dp"
        android:textColor="@color/red"
        android:fontFamily="@font/plus_jakarta_sans_bold"
        android:paddingTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/descProduk"
        />

</androidx.constraintlayout.widget.ConstraintLayout>